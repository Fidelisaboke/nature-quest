
# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_TIME_ZONE=UTC
DJANGO_PORT=8000

# PostgreSQL Database Configuration
POSTGRES_DB=nature_quest
POSTGRES_USER=nature_quest_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PostgreSQL Admin (for database setup script)
POSTGRES_ADMIN_PASSWORD=your_postgres_admin_password

# CORS Configuration (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development Settings
DEBUG_TOOLBAR=True
LOG_LEVEL=INFO

# Django Settings
DJANGO_SETTINGS_MODULE=backend.settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7


# =============================
# External Service Configuration
# =============================

# --- HuggingFace API Settings ---
# HUGGINGFACE_API_KEY: API key for quiz generation (get from HuggingFace)
HUGGINGFACE_API_KEY=
# HUGGINGFACE_BASE_URL: Base URL for HuggingFace API
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/models
# HUGGINGFACE_MODEL: Model to use for quiz generation
HUGGINGFACE_MODEL=microsoft/DialoGPT-large
# HUGGINGFACE_TIMEOUT: Request timeout in seconds
HUGGINGFACE_TIMEOUT=30
# HUGGINGFACE_MAX_RETRIES: Retry attempts for failed requests
HUGGINGFACE_MAX_RETRIES=3

# --- Location Verification (Foursquare) API Settings ---
# LOCATION_VERIFICATION_API_KEY: Foursquare API key for location verification
LOCATION_VERIFICATION_API_KEY=
# LOCATION_VERIFICATION_BASE_URL: Foursquare Places API base URL
LOCATION_VERIFICATION_BASE_URL=https://api.foursquare.com/v3/places
# LOCATION_VERIFICATION_TIMEOUT: Request timeout in seconds
LOCATION_VERIFICATION_TIMEOUT=15

# --- Photo/Location Verification Thresholds ---
# PHOTO_QUALITY_THRESHOLD: Image quality threshold (0.0-1.0)
PHOTO_QUALITY_THRESHOLD=0.6
# PHOTO_AUTHENTICITY_THRESHOLD: Authenticity check threshold (0.0-1.0)
PHOTO_AUTHENTICITY_THRESHOLD=0.7
# DEFAULT_VERIFICATION_RADIUS: Location verification radius in meters
DEFAULT_VERIFICATION_RADIUS=500

# --- Additional Settings ---
# MAX_PHOTO_UPLOAD_SIZE: Maximum photo upload size in bytes (10MB default)
MAX_PHOTO_UPLOAD_SIZE=10485760
# API_RATE_LIMIT_PER_MINUTE: API rate limiting (requests per minute)
API_RATE_LIMIT_PER_MINUTE=60

# --- Internal Service URLs ---
# PROGRESS_API_URL: Internal URL for progress service
PROGRESS_API_URL=http://localhost:8000/api/progress
